= simple_form_for @request, :url => {:action => "create"}  do |r|
  = r.button :submit, "Save", :class => "pull-right btn btn-primary"
  %h2 When you would like to go out?
  = r.error_notification
  .form-inputs
    = r.input :user_id, :as => :hidden
    = r.input :date, :required => true, :autofocus => true
    = r.input :start_time, :required => true
    = r.input :end_time, :required => true
    = r.input :description, :required => true
